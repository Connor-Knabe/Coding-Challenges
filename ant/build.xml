<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <javac srcdir="." destdir="."/>
    </target>

    <target name="jar">
        <jar destfile="HelloWorld.jar" basedir=".">
        </jar>
    </target>

    <target name="run">
        <java jar="HelloWorld.jar" fork="true"/>
    </target>

</project>